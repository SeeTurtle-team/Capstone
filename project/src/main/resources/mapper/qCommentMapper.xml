<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 
<mapper namespace="hansung.cap.mapper.qCommentMapper">
	<insert id="insertComment">
		insert into qcomment(userId,text,QnANum,time) values(#{userId},#{text},#{QnANum},#{time})
	</insert>
	
	<select id="CommentAll"  resultType="hansung.cap.project.qCommentVO">
		select * from qcomment where QnANum like #{i}
	</select>
	
	<delete id="delete">
  		delete from qcomment where commentNum like #{s}
  	</delete>
</mapper>