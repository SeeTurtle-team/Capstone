<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 
<mapper namespace="hansung.cap.mapper.MemberMapper">

	<select id="login" resultType="hansung.cap.project.MemberVO">
		select * from login where userId=#{userId} and userPw=#{userPw} 
	</select>
	
	<insert id="insertMember">
		insert into login(userId,userPw,userName,userEmail,userQuestion) values (#{userId},#{userPw},#{userName},#{userEmail},#{userQuestion})
	</insert>
	
	<select id="idCheck" resultType="int">
		select count(*) from login where userId=#{userId}
	</select>
	
</mapper>